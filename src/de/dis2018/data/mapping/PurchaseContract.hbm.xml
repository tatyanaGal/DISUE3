<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="de.dis2018.data.PurchaseContract" table="purchasecontract">
		<id name="id" column="purchasecontract_id">
			<generator class="native" />
		</id>
	
		<property name="noOfInstallments" type="int" column="noOfInstallments" />
		<property name="intrestRate" type="int" column="intrestRate" />
		<property name="house" type="Estate" column="house" />
		
		<many-to-one name="purchasecontractpartner" class="de.dis2018.data.Person" column="contractpartner" not-null="true" />
		
	</class>
</hibernate-mapping>