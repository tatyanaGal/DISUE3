<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="de.dis2018.data.EstateAgent" table="estateagent">
		<id name="id" column="estateagent_id">
			<generator class="native" />
		</id>
		<property name="name" type="string" column="name" />
		<property name="address" type="string" column="address" />
		<property name="login" type="string" column="login" unique="true" />
		<property name="password" type="string" column="password" />

		<set name="estates" table="Estate" inverse="true" lazy="true"
			fetch="select">
			<key>
				<column name="manager" />
			</key>
			<one-to-many class="de.dis2018.data.Estate" />
		</set>
	</class>
</hibernate-mapping>